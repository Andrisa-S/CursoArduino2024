int a = 3;
int b = 2;
int c = 8;
int d = 7;
int e = 6;
int f = 4;
int g = 5;
int dp = 9;

void setup() {
  pinMode(a, OUTPUT);
  pinMode(b, OUTPUT);
  pinMode(c, OUTPUT);
  pinMode(d, OUTPUT);
  pinMode(e, OUTPUT);
  pinMode(f, OUTPUT);
  pinMode(g, OUTPUT);
  pinMode(dp, OUTPUT);
}

void loop() {
  for(int i = 0; i <= 9; i++){
    digitalDisplay(i);
  }
}

